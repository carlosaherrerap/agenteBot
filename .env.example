# SQL Server Connection
# Para Autenticación de Windows, deja SQL_USER vacío o pon SQL_WINDOWS_AUTH=true
SQL_HOST=WIN-HKBUI0ID607
SQL_USER=
SQL_PASSWORD=
SQL_DATABASE=ContextBot
SQL_TABLE=BotHuancayo.Base
SQL_DRIVER=ODBC Driver 17 for SQL Server
SQL_WINDOWS_AUTH=true

# Redis Cache
REDIS_HOST=localhost
REDIS_PORT=6379

# Estado de registros a filtrar (1 = activos)
ESTADO_FILTRO=1

# Logging - true para mostrar logs detallados en terminal
DEBUG_LOGS=true

# AI Provider (ollama o deepseek)
AI_PROVIDER=ollama
OLLAMA_URL=http://localhost:11434/api/chat
OLLAMA_MODEL=llama3.2
# AI_PARTICIPATION controla el nivel de participación de la IA:
#   - 'full': la IA responde a todas las consultas.
#   - 'fallback': la IA solo se usa como respaldo cuando no hay respuesta directa o ocurre un error.
AI_PARTICIPATION=fallback


# Gmail (para derivación a asesores)
GMAIL_USER=your_email@gmail.com
GMAIL_PASS=your_app_password

# Bot Context
BOT_CONTEXT=Eres Max, asistente virtual de InformaPeru para cobranzas.

# Server
PORT=3000
